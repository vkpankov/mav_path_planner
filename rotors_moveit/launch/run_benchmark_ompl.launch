<launch>

  <!-- This argument must specify the list of .cfg files to process for benchmarking -->
   <arg name="bench_opts" default="$(find rotors_moveit)/config/benchmark.yaml"/>

  <!-- Load URDF -->
  <include file="$(find rotors_moveit)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>

  <!-- Start the database -->
  <include file="$(find rotors_moveit)/launch/warehouse.launch">
    <arg name="moveit_warehouse_database_path" value="moveit_ompl_benchmark_warehouse"/>
  </include>  

  <!-- Start Benchmark Executable -->
  <node name="$(anon moveit_benchmark)" pkg="moveit_ros_benchmarks" type="moveit_run_benchmark" args="--benchmark-planners" respawn="false" output="screen">
    <rosparam command="load" file="$(arg bench_opts)"/>
    <rosparam command="load" file="$(find rotors_moveit)/config/kinematics.yaml"/>
    <rosparam command="load" file="$(find rotors_moveit)/config/ompl_planning.yaml"/>

  </node>

</launch>
